<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme.Primary" parent="Theme.Material3.Light.NoActionBar">
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="searchViewStyle">@style/Widget.Stack.SearchView</item>
        <item name="switchPreferenceCompatStyle">@style/switchPreferenceCompatStyle</item>
    </style>

    <style name="Widget.Stack.SearchView" parent="Widget.AppCompat.SearchView">
        <item name="queryHint">@string/search</item>
        <item name="queryBackground">@null</item>
        <item name="searchHintIcon">@null</item>
